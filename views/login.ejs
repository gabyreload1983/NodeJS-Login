<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head'); -%>
  <body>
    <%- include('partials/header'); -%>
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-md-6 col-lg-4 mt-5">
            <h2>Log in</h2>
            <form>
              <div class="mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="Email"
                  required
                />
              </div>
              <div class="mb-3 text-danger email error"></div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  placeholder="password"
                  required
                />
              </div>
              <div class="mb-3 text-danger password error"></div>
              <button class="btn btn-primary">Log in</button>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer'); -%>
    <script src="/js/login.js"></script>
  </body>
</html>
